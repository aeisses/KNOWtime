<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colourtextgrey"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/screenheader"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/uptodownbutton"
        android:contentDescription="@string/screen_header" />

    <ImageView
        android:id="@+id/sidebar"
        android:layout_width="5dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/screenheader"
        android:contentDescription="@string/about_screen_arrow"
        android:background="@color/colourblack" />

    <ImageView
        android:id="@+id/arrow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/arrow2"
        android:layout_alignLeft="@+id/sidebar"
        android:contentDescription="@string/about_screen_arrow"
        android:src="@drawable/explaination" />

    <ImageView
        android:id="@+id/arrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/arrow3"
        android:layout_alignLeft="@+id/sidebar"
        android:contentDescription="@string/about_screen_arrow"
        android:src="@drawable/explaination" />

    <ImageView
        android:id="@+id/arrow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/arrow4"
        android:layout_alignLeft="@+id/sidebar"
        android:contentDescription="@string/about_screen_arrow"
        android:src="@drawable/explaination" />

    <ImageView
        android:id="@+id/arrow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sidebar"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/about_screen_arrow"
        android:src="@drawable/explaination" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/arrow1"
        android:layout_alignLeft="@+id/arrow1"
        android:layout_marginLeft="45dip"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colourwhite"
        android:text="@string/about_screen_shareme" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/arrow2"
        android:layout_marginLeft="45dip"
        android:layout_alignTop="@+id/arrow2"
        android:textColor="@color/colourwhite"
        android:text="@string/about_screen_trackme" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/arrow3"
        android:layout_marginLeft="45dip"
        android:layout_alignTop="@+id/arrow3"
        android:textColor="@color/colourwhite"
        android:text="@string/about_screen_stops" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/arrow4"
        android:layout_marginLeft="45dip"
        android:layout_alignTop="@+id/arrow4"
        android:textColor="@color/colourwhite"
        android:text="@string/about_screen_favourite" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text1"
        android:layout_alignRight="@+id/imageButton1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/arrow1"
        android:text="@string/about_screen_header"
        android:textColor="@color/colourwhite" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView1"
        android:layout_marginRight="18dp"
        android:background="@drawable/mailbutton"
        android:onClick="touchFeedbackButton"
        android:contentDescription="@string/feedback_button" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sidebar"
        android:layout_centerHorizontal="true"
        android:text="@string/about_screen_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
</RelativeLayout>