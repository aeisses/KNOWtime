<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.knowtime.knowtime"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.knowtime.knowtime.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.knowtime.knowtime.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="com.knowtime.knowtime.ShareMeActivity"
            android:label="@string/title_activity_share_me" >
        </activity>
        <activity
            android:name="com.knowtime.knowtime.FavouriteActivity"
            android:label="@string/title_activity_favourite" >
        </activity>
        <activity
            android:name="com.knowtime.knowtime.TwitterActivity"
            android:label="@string/title_activity_twitter" >
        </activity>
        <activity
            android:name="com.knowtime.knowtime.StopsActivity"
            android:label="@string/title_activity_stops" >
        </activity>
    </application>

</manifest>
